
<!-- diagnose.hbs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Diagnose Page for: {{data.name}}</title>
  <!-- Include Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-5">
    
    
    <h1>Diagnose Page for: {{data.name}}</h1>

    <!-- Diagnosis Form -->
    <form action="/patient/{{data._id}}/diagnose" method="POST">
   
      <div class="form-group">
        <label for="diagnosisDate">Date:</label>
        <input type="date" class="form-control" id="diagnosisDate" name="diagnosisDate" required>
      </div>
      
      <div class="form-group">
        <label for="diagnosis">Diagnosis:</label>
        <textarea class="form-control" id="diagnosis" name="diagnosis" rows="4" required></textarea>
      </div>
      
      <button type="submit" class="btn btn-primary">Submit Diagnosis</button>
    </form>

     <!-- Diagnosis lista -->
    <a href="/patient/{{data._id}}/diagnoses" class="btn btn-secondary">View Diagnoses List</a>
  </div>


  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
